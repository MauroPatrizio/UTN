    <class>utn.BuenSabor.entities.Domicilio</class>
    <class>utn.BuenSabor.entities.Sucursal</class>
    <class>utn.BuenSabor.entities.Promocion</class>
    <class>utn.BuenSabor.entities.ArticuloManufacturado</class>
